@{
  Layout = "_Layout";
}

@using WordPuzzle.Models

<h1>Current Games</h1>

<ul style="list-style: none">
  @if (Model.Count == 0)
  {
    <h4>No games have been started!</h4>
  }
  @foreach (Game game in Model)
  {
    <li><h4><a href="/games/@game.Id">@game.Id: @game.PlayerName's Games</a></h4></li>
  }
</ul>

<br>
<br>
<p><a href="/">Back to Home</a></p>
<p><a href="/games/new">Start a New Game</a></p>